<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.lihuu.sharedplugins</id>
    <name>SharedPluginsManager</name>
    <vendor>lihuu</vendor>

    <depends>com.intellij.modules.platform</depends>

    <description><![CDATA[
    A plugin to manage and share a common set of third-party plugins across different IDE installations.
    <br>
    Features:
    <ul>
        <li>Scans all installed non-bundled plugins.</li>
        <li>Allows selecting and copying plugins to a central shared directory.</li>
        <li>Prompts to copy newly installed plugins automatically.</li>
    </ul>
    ]]></description>

    <!-- Extension points defined by the plugin. -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- Settings/Preferences Page -->
        <applicationConfigurable
                parentId="tools"
                instance="com.github.lihuu.sharedplugins.manager.settings.SharedPluginsSettingsConfigurable"
                id="com.sharedplugins.manager.settings.SharedPluginsSettingsConfigurable"
                displayName="Shared Plugins Manager"/>

        <!-- Listener for plugin installation/uninstallation -->
        <dynamicPluginListener
                implementation="com.github.lihuu.listeners.PluginInstallListener"/>
    </extensions>

    <actions>
        <!-- Action to manually trigger the scan and copy process -->
        <action id="com.sharedplugins.manager.actions.ScanAndCopyAction"
                class="com.github.lihuu.sharedplugins.manager.actions.ScanAndCopyAction"
                text="Copy Plugins to Shared Directory..."
                description="Scans and copies selected plugins to the configured shared directory.">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>

</idea-plugin>
